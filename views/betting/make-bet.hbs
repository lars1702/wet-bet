<form action="/betting/day-and-place" method="POST" id="form-container">
  
  <label for="day">Day:</label>
  <input type="date" name="date" id="date" min="{{date}}"/>
  
  <br><br>

  <label for="place">Place:</label>
  <select id="city" name="city"> 
    <option id="tokyo" name="tokyo" value="Tokyo">Tokyo</option>
    <option id="paris" name="paris" value="Paris">Paris</option>
    <option id="berlin" name="berlin" value="Berlin">Berlin</option>
    <option id="oslo" name="oslo" value="Oslo">Oslo</option>
    <option id="ljubljana" name="ljubljana" value="Ljubljana">Ljubljana</option>
  </select>

  <br><br>

  <label for="temperature">Temperature in CELSIUS:</label>
  <input id="temperature" type="number" id="temperature" name="temperature" placeholder="Put in a number">

  <br><br>
  <button type="submit" class="btn btn-light">Place a bet</button>
</form>